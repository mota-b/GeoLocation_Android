<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <!-- Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/info_area">

        </LinearLayout> <!-- Info layout -->

        <!-- Buttons Service -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:background="@color/buttonsService_area">

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="252dp"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/go"

                    android:layout_width="235dp"
                    android:layout_height="230dp"



                    android:layout_centerInParent="true"
                    android:layout_gravity="top|start"
                    android:background="@drawable/go_button"
                    android:fontFamily="serif-monospace"
                    android:text="Go"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/go_button"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/stop"

                    android:layout_width="69dp"
                    android:layout_height="68dp"



                    android:layout_gravity="bottom|end"
                    android:background="@drawable/stop_button"
                    android:fontFamily="serif-monospace"
                    android:text="STOP"
                    android:textColor="@color/go_button"
                    android:textStyle="bold" />
            </LinearLayout>



        </RelativeLayout> <!-- Buttons Service -->

        <!-- Update Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@color/updateData_area">
            <Button
                android:id="@+id/btnTakePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="QR read" />

            <Button
                android:id="@+id/btnScanBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnTakePicture"
                android:layout_centerHorizontal="true"
                android:onClick="scanQR"
                android:text="QR scan" />

        </LinearLayout> <!-- Data Update-->

    </LinearLayout>

</RelativeLayout>