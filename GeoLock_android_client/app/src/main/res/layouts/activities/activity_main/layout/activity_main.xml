<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <!-- Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/info_area">

        </LinearLayout> <!-- Info layout -->

        <!-- Buttons Service -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_weight="100"
            android:background="@color/buttonsService_area">

            <RelativeLayout
                android:layout_width="354dp"
                android:layout_height="361dp"
                android:layout_centerInParent="true">


                <Button
                    android:id="@+id/go"

                    android:layout_width="295dp"
                    android:layout_height="293dp"


                    android:layout_centerInParent="true"
                    android:layout_gravity="top|start"
                    android:background="@drawable/go_button"
                    android:fontFamily="serif-monospace"
                    android:text="Go"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#757575"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnScanBarcode"
                    android:layout_width="88dp"
                    android:layout_height="87dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"

                    android:layout_marginLeft="10dp"

                    android:elevation="2dp"
                    android:layout_marginTop="11dp"

                    android:background="@drawable/qr_button"
                    android:onClick="scanQR"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/stop"

                    android:layout_width="103dp"
                    android:layout_height="107dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/stop_button"

                    android:fontFamily="serif-monospace"

                    android:textColor="@color/go_button"
                    android:textStyle="bold" />
            </RelativeLayout>


        </RelativeLayout> <!-- Buttons Service -->

        <!-- Update Data -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/updateData_area"/> <!-- Data Update-->

    </LinearLayout>

</RelativeLayout>