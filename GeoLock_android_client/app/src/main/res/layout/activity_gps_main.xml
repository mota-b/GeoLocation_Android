<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.zexes_g.demontrack.GPS_Activity">




    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout2">
            <TextView
                android:id="@+id/coord_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Coordinate"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                tools:text="Coordinate" />

            <!-- Coordinate refresh -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lat :\nLon :\nAlt : \nSatellites :"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scroll_text"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/coord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Unknown\nUnknown\nUnknown\n0/?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!-- Coordinate tittle -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/IMEI_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="IMEI :"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/IMEI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8pt"
            android:layout_margin="15pt">
            <ImageButton

                android:id="@+id/gps_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:src="@drawable/gps_of" />
        </LinearLayout>

    </RelativeLayout>


    <!-- Start/Stop service -->

</RelativeLayout>
